<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".ModificacionEmpleados">


    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="366dp"
        android:layout_height="309dp"
        android:layout_margin="20sp"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:rowCount="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textViewDni"
            android:textColor="@android:color/white"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Dni"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextDni"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:editable="false"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="Deprecated" />

        <TextView
            android:id="@+id/textViewNombre"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Nombre"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextNombre"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewApellido"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Apellido"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextApellido"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewSueldo"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"

            android:text="Sueldo"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/editTextSueldo"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"

            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textViewMoneda"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"

            android:text="Moneda"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerMoneda"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_alignParentTop="true"

            android:entries="@array/monedas" />


        <TextView
            android:id="@+id/textViewDepartamento"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"

            android:text="Departamento"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextDepartamento"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"

            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Cancelar"
            android:textSize="12dp" />

        <Button
            android:id="@+id/buttonAceptar"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:text="Aceptar"
            android:textSize="12dp" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>