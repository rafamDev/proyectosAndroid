<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".ModificacionJugadores2">


    <GridLayout
        android:id="@+id/gridLayout2"

        android:layout_width="366dp"
        android:layout_height="309dp"
        android:layout_margin="20sp"

        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:rowCount="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textViewCodigo"
            android:textColor="@android:color/white"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Codigo"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTextCodigo"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:editable="false"
            android:ems="10"
            android:inputType="number"
            tools:ignore="Deprecated" />

        <TextView
            android:id="@+id/textViewNombre"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Nombre"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTextNombre"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewPrecio"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Precio"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTextPrecio"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewPosicion"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="20sp"
            android:text="Posicion"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewPuntos"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:text="Puntos"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTextPuntos"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonEliminar"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Eliminar"
            android:textSize="12dp" />

        <Button
            android:id="@+id/buttonEditarr"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:text="Editar"
            android:textSize="12dp" />

        <Spinner
            android:id="@+id/spinnerPosicion"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20sp"
            android:entries="@array/posiciones" />


    </GridLayout>

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cancelar"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
        tools:layout_editor_absoluteX="161dp" />

</androidx.constraintlayout.widget.ConstraintLayout>